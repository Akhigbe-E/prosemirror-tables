{
  "name": "prosemirror-tables",
  "version": "1.1.1",
  "description": "ProseMirror's rowspan/colspan tables component",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "style": "style/tables.css",
  "typings": "./index.d.ts",
  "license": "MIT",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git://github.com/prosemirror/prosemirror-tables.git"
  },
  "maintainers": [
    {
      "name": "Eduard Shvedai",
      "email": "eshvedai@atlassian.com"
    },
    {
      "name": "Huanhuan Huang",
      "email": "hhuang@atlassian.com"
    }
  ],
  "dependencies": {
    "prosemirror-keymap": "^1.1.2",
    "prosemirror-model": "^1.8.1",
    "prosemirror-state": "^1.3.1",
    "prosemirror-transform": "^1.2.1",
    "prosemirror-view": "^1.13.3"
  },
  "devDependencies": {
    "@prosemirror/buildhelper": "^0.1.5",
    "@rollup/plugin-buble": "^0.21.3",
    "@rollup/plugin-typescript": "^8.3.2",
    "@types/jest": "^27.5.1",
    "@types/prosemirror-keymap": "^1.0.4",
    "@types/prosemirror-model": "^1.7.0",
    "@types/prosemirror-schema-basic": "^1.0.2",
    "@types/prosemirror-state": "^1.2.0",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.25.0",
    "builddocs": "^1.0.3",
    "eslint": "^8.16.0",
    "eslint-plugin-jest": "^26.2.2",
    "ist": "^1.1.1",
    "jest": "^28.1.0",
    "prettier": "^2.6.2",
    "prosemirror-commands": "^1.1.1",
    "prosemirror-example-setup": "^1.1.1",
    "prosemirror-menu": "^1.1.0",
    "prosemirror-schema-basic": "^1.1.1",
    "prosemirror-test-builder": "^1.0.2",
    "rollup": "^2.74.1",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "ts-jest": "^28.0.2",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  },
  "scripts": {
    "typecheck": "tsc -p tsconfig.json",
    "test": "jest",
    "build_demo": "rollup -c rollup.demo.config.js",
    "watch_demo": "rollup -w -c rollup.demo.config.js",
    "build": "pm-buildhelper src/index.ts",
    "clean": "rm -rf dist/",
    "prepare": "yarn lint && yarn typecheck && yarn clean & yarn build",
    "build_readme": "builddocs --name tables --format markdown --main src/README.md --filename src/index.ts",
    "lint": "eslint src/ tests/ --ext .ts,.tsx"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "modulePathIgnorePatterns": ["dist"],
    "transformIgnorePatterns": ["^.+\\.js$"],
    "testMatch": ["**/tests/test-*.ts"],
    "globals": {
      "ts-jest": {
        "tsconfig": "./tsconfig.tests.json"
      }
    }
  }
}
