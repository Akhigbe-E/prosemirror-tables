{
  "compilerOptions": {
    "lib": ["es6", "dom"],
    "stripInternal": true,
    "noUnusedLocals": true,
    "strict": true,
    "target": "es6",
    "module": "es2020",
    "declaration": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noEmit": true,
    "skipLibCheck": true
  },
  "files": ["index.d.ts"],
  "exclude": ["node_modules", "dist", "demo.ts"],
  "include": ["src/*.ts", "test/*.ts"]
}
